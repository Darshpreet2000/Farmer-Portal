<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displayproduct">


    <TextView
        android:id="@+id/productDescreption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:text="ThisisnewActivity"

        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/productDescreption">

        <EditText
            android:id="@+id/biddingprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDescreption"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:hint="Add Bidding Price" />

        <Button
            android:id="@+id/addbidding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BuyNow"
            android:layout_below="@+id/biddingprice"
            android:layout_alignStart="@+id/biddingprice"
            android:layout_alignEnd="@+id/biddingprice"
            android:layout_margin="2dp"
            android:layout_marginBottom="117dp"
            android:text="Bid Price" />

        <Button
            android:id="@+id/BuyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addbidding"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"

            android:text="BuyNow /ख़रीदे"

            />
    </LinearLayout>
</RelativeLayout>
