<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/productcategory"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Category" />

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/producttitle"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:text="Product Name" />
        <TextView
            android:layout_below="@id/producttitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tq"
            android:text="Quantity"/>


        <TextView
            android:layout_margin="4dp"
            android:id="@+id/productquantity"
            android:layout_below="@id/tq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity" />

        <TextView
            android:id="@+id/tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productquantity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:text="Crop Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView

            android:id="@+id/PriceOfCrop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:text="CropPrice" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/productcategory"
            android:layout_alignParentRight="true"
            android:id="@+id/buyingquantity"
            android:layout_marginTop="105dp"
            android:layout_marginRight="151dp"
            android:background="@drawable/edit_box_background" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:id="@+id/Removecart"
            android:background="@color/dark_cyan"
            android:text="Remove"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="9dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="138dp"
            android:layout_marginBottom="62dp"
            android:text="BuyingQuantity"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>