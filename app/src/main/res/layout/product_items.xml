<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/productcategory"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Category" />

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/producttitle"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:text="Product Name" />
<TextView
    android:layout_below="@id/producttitle"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tq"
    android:text="Quantity"/>


        <TextView
            android:layout_margin="4dp"
            android:id="@+id/productquantity"
            android:layout_below="@id/tq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity" />
        <TextView
            android:layout_below="@id/productquantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mq"
            android:text="Min Quantity"/>
        <TextView

            android:layout_margin="4dp"
            android:id="@+id/minproductquantity"
            android:layout_below="@id/mq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Quantity" />

        <TextView
            android:layout_below="@id/minproductquantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tp"
            android:text="Crop Price"/>
        <TextView

            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PriceOfCrop1"
            android:layout_below="@+id/tp"
            android:text="CropPrice"/>

        <EditText
            android:id="@+id/amountobuy"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@id/productcategory"
            android:layout_alignParentRight="true"
            android:layout_marginTop="95dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_box_background"
            android:hint="10"
            android:inputType="numberSigned" />
<LinearLayout
    android:layout_margin="10dp"
    android:layout_below="@id/PriceOfCrop1"
    android:layout_width="match_parent"
   android:orientation="horizontal"
    android:layout_height="wrap_content">

    <Button
        android:layout_weight="2"
        android:id="@+id/addtocart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:text="Add to Cart"
        android:textColor="@color/white" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.1" />
    <Button
            android:layout_weight="2"
            android:id="@+id/buttonbidprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/dark_cyan"
            android:text="Bid Price"
            android:textColor="@color/white" />
</LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="230dp"
            android:layout_marginBottom="131dp"
            android:text="Buying Quantity"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>