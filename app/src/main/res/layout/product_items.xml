<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/productcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:text="Category"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/producttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Product Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/producttitle"
            android:text="Quantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/productquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tq"
            android:layout_margin="4dp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/mq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productquantity"
            android:text="Min Quantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView

            android:id="@+id/minproductquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mq"
            android:layout_margin="4dp"
            android:text="Min Quantity" />

        <TextView
            android:id="@+id/tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minproductquantity"
            android:text="Crop Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView

            android:id="@+id/PriceOfCrop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp"
            android:layout_margin="4dp"
            android:text="CropPrice" />

        <EditText
            android:id="@+id/amountobuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productcategory"
            android:layout_alignParentRight="true"
            android:layout_marginTop="108dp"
            android:layout_marginRight="44dp"
            android:background="@drawable/edit_box_background"
            android:hint="Buying Quantity"
            android:inputType="numberSigned" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PriceOfCrop1"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addtocart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/primary"
                android:text="Add to Cart"
                android:textColor="@color/white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/buttonbidprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/dark_cyan"
                android:text="Bid Price"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>